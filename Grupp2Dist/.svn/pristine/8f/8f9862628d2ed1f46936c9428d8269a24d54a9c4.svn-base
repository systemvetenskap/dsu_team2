body {
    background: #EFF1DA;
    font-size: 1em;
    color: #000;
    font-family: 'Abel', sans-serif;
}
table {
    background: #FFF;
}
.app_bg {
    background: url(Images/app_bg.jpg);
    background-size: 100%;
}
.loginForm {
    background: rgba(0, 0, 0, 0.57);
    padding: 5%;
    margin-top: 10%;
    border-radius: 5px;
    color: #FFF;
    font-weight: normal;
}
label {
    font-weight: normal;
}
#ButtonLogin {
    text-align: center;
    width: 100%;
    margin-top: 20px;
}
h1 {
    text-align: center;
    color: #FFFFFF;
    margin-bottom: 10px;
    font-size: 2em;
    margin-top: 10px;
    text-shadow: -1px -1px #225536;
    font-family: 'Open Sans Condensed', sans-serif;
    font-weight: bold;
    text-transform: uppercase;
}
span {

}
label {
    font-size: 2em;
}
ul {
    margin-left: 0px;
    padding-left: 0px;
    text-align: center;
    margin-bottom: 0px;
}
li {
    font-size: 2em;
    background: #378857;
    padding: 10px;
    cursor: pointer;
}
li:nth-last-child(1) {

}
.lbl {
    font-size: 2em;
}
.lblname {
    text-align: center;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    display: block;
    margin-bottom: 7px;
    font-size: 2em;
}
.form-control1 {
    color: #439363;
    background-color: #C3F3D6;
    background-image: none;
    border: 1px inset #79BE95;
}
#heading {
    width: 100%;
    float: left;
    border-left: none;
    border-right: none;
    background: #44A56B;
    box-shadow: 0px 3px 2px rgba(0, 0, 0, 0.35);
}
#heading .menu span {
    font-size: 2em;
}
.logo-glyph {

}
.menu {
    text-shadow: -1px -1px #225536;
    position: absolute;
    top: 8px;
    left: 10px;
    font-size: 1.4em;
    color: #FFF;
}
.menu-popup {
    display: none;
    float: left;
    width: 100%;
    background: #297648;
}
.menu-popup ul li a {
    color: #FFF;
}
.menu-popup ul li {
    color: #FFF;
}
.leaderboard {
    display: none;
    width: 90%;
    position: absolute;
    margin-left: 5%;
    height: 400px;
    background: #378857;
    top: 60px;
    border-radius: 5px;
}
.leaderHeader {
    text-align: center;
    color: #FFF;
}
.showLeaderBoard {
    display: none;
}
.leaderHeader span {
    font-size: 0.7em;
    color: #FFF900;
    margin-left: 10px;
    margin-right: 10px;
}
.closeLeader span {
    color: #FFF;
    position: absolute;
    right: 2px;
    top: 2px;
}
.active {
    display: block;
}
.content {
    margin-left: auto;
    margin-right: auto;
    float: left;
    width: 100%;
    padding: 5%;
}
form {

}
.chooseTournament {

}
.boxes {

}
.btn-start {
    width: 100%;
}
.box {
    float: left;
    width: 100%;
    text-align: center;
    padding: 3%;
}
.box img {
    width: 100%;
    border-radius: 100%;
}
.box .text {
    font-size: 2em;
    border-top: 2px solid #000;
    border-bottom: 2px solid #000;
    padding-top: 5px;
    padding-bottom: 5px;
    margin-top: 20px;
    font-weight: bold;
}
.logout {
    float: left;
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 3%;
    left: 0;
}
.logo {
    width: 30%;
    margin-left: auto;
    margin-right: auto;
    display: block;
}
